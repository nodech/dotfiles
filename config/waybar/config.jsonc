          "<span color='#ff9977'>Û∞§ü</span>",
          "<span color='#ffffa5'>Û∞§¢</span>",
          "<span color='#f4dbd6'>Û∞§¢</span>",
          "<span color='#2aa9ff'>Û∞§•</span>",
          "<span color='#69ff94'>Û∞§®</span>"
        ]
    },
    "wireplumber": {
        "format": "<span color='#c6a0f6'>{icon}</span> {volume}%",
        "format-muted": "<span color='red'>ÔÄ¶</span> muted",
        "on-click": "helvum",
        "format-icons": [
          "ÔÄ¶",
          "ÔÄß",
          "ÔÄ®"
        ]
    },
    "idle_inhibitor": {
        "format": "{icon}",
        "format-icons": {
            "activated": "ÔÅÆ",
            "deactivated": "ÔÅ∞"
        }
    },
    // "power-profiles-daemon": {
    //   "format": "{icon}",
    //   "tooltip-format": "Power profile: {profile}\nDriver: {driver}",
    //   "tooltip": true,
    //   "format-icons": {
    //     "default": "ÔÉß",
    //     "performance": "ÔÉß",
    //     "balanced": "Ôâé",
    //     "power-saver": "ÔÅ¨"
    //   }
    // },
    "custom/tasks": {
        "exec": "$XDG_CONFIG_HOME/nod/scripts/tasks.js",
        "exec-if": "ls -A ~/.local/share/waytasks | grep -q .",
        "interval": 5,
        "format-alt": "<span color='#64727d'>[ {alt} ]</span>",
        "format": "<span color='#64727d'>[ {} ]</span>",
        "on-click": "",
        "return-type": "json"
    },
    "custom/github": {
      "format": "ÔÑì {}",
      "return-type": "json",
      "interval": 300,
      "exec": "$XDG_CONFIG_HOME/waybar/scripts/github.sh",
      "on-click": "xdg-open https://github.com/notifications"
    },
    "custom/tray-count": {
      "format": "{}",
      "return-type": "json",
      "interval": 30,
      "exec": "$XDG_CONFIG_HOME/waybar/scripts/tray-count.sh"
    },
    "mpris": {
      "format": "{player_icon} {dynamic}",
      "format-paused": "{status_icon} <i>{dynamic}</i>",
      "player-icons": {
        "default": "‚ñ∂",
        "mpv": "üéµ"
      },
      "status-icons": {
        "paused": "‚è∏"
      },
      "dynamic-order": [
        "artist",
        "title",
        "length",
        "position"
      ],
      "dynamic-importance-order": [
        "title",
        "position",
        "length",
        "artist"
      ],
      "dynamic-len": 50,
      "title-len": 20
    }
}

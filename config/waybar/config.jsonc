        "format": "<span color='#bf00ff'>ÔÄó </span>{:%a, %b %d, %Y %H:%M}",
        "format-alt": "<span color='#bf00ff'>ÔÄó </span>{:%Y-%m-%d %H:%M}"
    },
    "battery": {
      "states": {
        "warning": 30,
        "critical": 10
      },
      "format": "{icon} {capacity}%",
      "format-charging": "<span color='#a9f99f'>Û±êã</span> {capacity}%",
      "interval": 1,

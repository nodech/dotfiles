          "<span color='#ffffa5'>Û∞Åø</span>",
          "<span color='#88ffa5'>Û∞ÇÅ</span>",
          "<span color='#19ee15'>Û∞Åπ</span>"
      ],
      "tooltip": true
    },
    "backlight": {
        // "device": "acpi_video1",
        "format": "<span color='#f9e2af'>{icon}</span> {percent}%",
        "format-icons": ["Óéç", "Óèì", "Óèë", "Óèè", "Óèé", "Óèç", "Óèä", "Óèà", "Óéõ"],
        "tooltip": false
    },
    "temperature": {
        "critical-threshold": 80,
        "format-critical": "<span color='#ff0000'>{icon}</span> {temperatureC}¬∞C",
        "format": "<span color='#fab387'>{icon}</span> {temperatureC}¬∞C",
        "format-icons": ["Ôù´", "Ôãâ", "Ôù©"],
        "tooltip": false
    },
    "cpu": {
     "interval": 3,
     "format": "{icon0}{icon1}{icon2}{icon3}{icon4}{icon5}{icon6}{icon7}{usage}%",
     "format-icons": [
        "<span color='#69ff94'>‚ñÅ</span>", // green
        "<span color='#2aa9ff'>‚ñÇ</span>", // blue
        "<span color='#f8f8f2'>‚ñÉ</span>", // white

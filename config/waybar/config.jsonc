    },
    "memory": {
      "interval": 10,
      "format": "<span color='#9b59b6'>ÓøÖ</span> {used:0.1f}G/{total:0.1f}G"
    },
    "network": {
        "interval": 5,
        "format-wifi": "<span color='#00FFFF'>{icon}</span> {essid}",
        "format-ethernet": "<span color='#7FFF00'>ÔÄí </span> Wired",

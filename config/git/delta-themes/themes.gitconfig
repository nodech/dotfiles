[delta]
    commit-decoration-style = none
    file-added-label = +
    file-copied-label = *
    file-decoration-style = none
    file-modified-label = ~
    file-removed-label = -
    file-renamed-label = >
    file-style = omit
    hunk-header-decoration-style = none
    hunk-header-style = file line-number syntax
    line-numbers = true
    zero-style = syntax
    keep-plus-minus-markers = true

[delta "nod-light"]
    dark = false

[delta "nod-dark"]
    dark = true

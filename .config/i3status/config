# i3status configuration file.
# see "man i3status" for documentation.

# It is important that this file is edited as UTF-8.
# The following line should contain a sharp s:
# ÃŸ
# If the above line is not correctly displayed, fix your editor first!

general {
        colors = true
        interval = 5
}

order += "disk /home"
order += "disk /home/nd/dev"
order += "wireless _first_"
#order += "ethernet _first_"
order += "battery all"
order += "load"
order += "cpu_usage"
order += "tztime local"
order += "volume master"

general {
  output_format = i3bar
}

wireless _first_ {
        # format_up = "W:(%quality/%frequency at %essid) %ip"
        format_up = "%essid:%ip/%quality"
        format_down = "W:-"
}

ethernet _first_ {
        # if you use %speed, i3status requires root privileges
        format_up = "E: %ip (%speed)"
        format_down = "E:-"
}

battery all {
        format = "%status %percentage %remaining"
        status_chr = "âš¡"
        status_bat = "ðŸ”‹"
        status_unk = "?"
        status_full = "â˜»"
}

tztime local {
        format = "%Y-%m-%d %H:%M:%S"
}

cpu_usage {
  format = "%usage"
}

load {
        format = "%1min"
}

disk "/home" {
        format = "home: %avail"
}

disk "/home/nd/dev" {
        format = "dev: %avail"
}

volume master {
  format = "â™ª: %volume"
  format_muted = "â™ª: -"
  device = "default"
  mixer = "Master"
  mixer_idx = 0
}
